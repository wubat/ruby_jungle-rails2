<article>
  <%= link_to product_path(product) do %>
    <% if product.image.thumb.url.present? %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <% end %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <div>
  <% if product.quantity.nil? || product.quantity == 0 %>
    <span class="btn btn-xs btn-danger">Sold Out</span>
    <button class="btn btn-xs disabled">
    <%= fa_icon "shopping-cart", text: 'Add' %> 
    </button>
    <% else %>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn' ,
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
    <% end %>
    <% end %>
  </div>
</article>
<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <div class="panel panel-default products">

    <table class= "table table-bordered">
    <thead>
    <tr>
    <th>Item no.</th>
    <th colspan='2'>Ordered Product(s)</th>
    <th>Category</th>
    <th colspan="3">Photo</th>
    <th colspan="3">Description</th>
    <th>Price</th>
    <th>Purchased Quantity</th>
    </tr>
    </thead>
    <% counter = 0 %>
    <% @product_line_items.each do |item| %>
      <% counter += 1 %>
      <tbody>
      <td><%= counter %></td>
      <td colspan="2"><%= item[:product].name %></td>
      <td><%= item[:category].name %></td>
      <td colspan="3"><%= image_tag item[:product].image.thumb.url %></td>
      <td colspan="3"><%= item[:product].description %></td>
      <td><%= humanized_money_with_symbol (item[:product].price_cents / 100) %></td>
      <td><%= item[:line_item].quantity %></td>
      </tbody>
      <% end %>
      </table>
      
      <h4>Total Amount: <%= humanized_money_with_symbol (@order.total_cents / 100) %></h4>
      <h4>Your email: <%= @order.email %></h4>
    </div>

  </div>


  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
  
